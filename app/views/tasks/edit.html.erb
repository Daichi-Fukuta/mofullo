<h1>タスク更新フォーム</h1>
<%= form_with model: @task, local: true do |form| %>
  <p>
  <%= form.label "タイトル:" %><br>
  <%= form.text_field :title %>
  </p>
  
  <p>
  <%= form.label "本文:" %><br>
  <%= form.text_area :body %>
  </p>

  <p>
  <%= form.label "期限:" %><br>
  <%= form.date_field :dua_date %>
  </p>
  <%= form.submit "更新", class: "btn btn-primary" %>
<% end %>
<%= link_to "戻る", tasks_path %>